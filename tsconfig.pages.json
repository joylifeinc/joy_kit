{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": ".",
      "lib": ["es6", "es7", "dom", "es2017"],
      "noImplicitAny": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "jsx": "react"
    },
    "include": [
        "src/**/*",
        "stories/**/*",
        "typings/**/*"
      ],
    "exclude": [
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx",
        "node_modules"
      ]
  }
  