{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": ".",
      "lib": ["es6", "es7", "dom", "es2017"],
      "noImplicitAny": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "jsx": "react",
      "baseUrl": ".",
      "rootDir": ".",
      "paths": {
        "~src/*": ["src/*"] // will enable -> import { ... } from '~src/components'
      }
    },
    "include": [
        "src/**/*",
        "stories/**/*",
        "typings/**/*"
      ],
    "exclude": [
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx",
        "node_modules"
      ]
  }
  